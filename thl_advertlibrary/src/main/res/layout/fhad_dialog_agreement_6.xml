<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/tt_custom_dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="10dp"
    android:paddingBottom="15dp"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/fhad_tv_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingTop="16dp"
        android:paddingEnd="5dp"
        android:paddingBottom="16dp"
        android:textColor="#333333"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意《用户协议》和《隐私政策》"
            android:textColor="#FFBABABA"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">


        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/fhad_tv_dis_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/shape_circle_stroke_bg"
            android:elevation="0dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:text="不同意"
            android:textColor="#333333"
            android:textSize="16sp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/fhad_tv_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_circle_primary_bg"
            android:elevation="0dp"
            android:text="同意并继续"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>